    .X = RadioButton2.X
    .Y = RadioButton2.Y + (RadioButton2.Y - RadioButton1.Y)
    .W = RadioButton2.W
    .H = RadioButton2.H
    .Text = "Al Treilea"
    Object.Attach(hRadioButton, FMain, "RadioButton3")
  End With
  
End


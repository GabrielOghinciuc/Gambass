' Gambas class file

Public unghi As Float
Public xc As Float
Public yc As Float
Public raza As Float
Public Pi As Float
Public alfa As Float

Public Sub Form_Open()
  
  unghi = 0
  xc = 50
  yc = 50
  raza = 30
  'Pi = 3.14159
  PictureBox2_MouseDown()
End



Public Sub PictureBox2_MouseDown()

  unghi = unghi + 50
  alfa = unghi / 180 * Pi
  PictureBox2.X = xc + raza * Cos(alfa)
  PictureBox2.Y = yc + raza * Sin(alfa)

End
